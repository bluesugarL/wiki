<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aiit.wiki.mapper.DocMapperCust" >
    <update id="increateViewCount" >
        update doc set view_count = view_count + 1 where id = #{id}
    </update>
    <update id="increateVoteCount" >
        update doc set vote_count = vote_count + 1 where id = #{id}
    </update>
</mapper>